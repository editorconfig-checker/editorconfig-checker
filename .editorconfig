root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
end_of_line = lf

[*.{java, groovy}]
indent_size = 2

[*.xml]
indent_size = 2

[*.{html,md}]
indent_size = 2
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[{.gitattributes,.gitignore,.gitmodules}]
indent_style = tab
