root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
end_of_line = lf

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.{go,mod}]
indent_style = tab

[Makefile]
indent_style = tab

[*{.yml,.ecrc}]
indent_size = 2
